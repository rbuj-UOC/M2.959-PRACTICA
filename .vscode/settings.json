{
    "cSpell.language": "ca,en",
    "cSpell.words": [
        "IDESCAT"
    ],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": "always",
        "source.fixAll.shellcheck": "explicit"
    },
    "editor.rulers": [
        80
    ],
    // The shfmt fullpath, example:
    //   - [mac] /opt/homebrew/bin/shfmt
    //   - [linux] /usr/local/bin/shfmt
    //   - [windows] C:/bin/shfmt.exe
    // download from https://github.com/mvdan/sh/releases
    "shellformat.path": "/opt/homebrew/bin/shfmt",
    "shellformat.effectLanguages": [
        "shellscript"
    ],
    "[json]": {
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
        "editor.formatOnSave": true
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.defaultColorDecorators": "never",
        "editor.wordBasedSuggestions": "off",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        }
    },
    "[shellscript]": {
        "editor.formatOnSave": true,
    },
    "r.rpath.mac": "${workspaceFolder}/.conda/bin/R",
    "r.helpPanel.cacheIndexFiles": "Workspace",
    "r.alwaysUseActiveTerminal": true,
    "r.lsp.lang": "en_US.UTF-8",
    "r.lsp.use_stdio": true
}